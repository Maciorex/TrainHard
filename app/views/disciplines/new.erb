<h1 align="center">Create new discipline</h1>

<div class="row">
  <div class="col-sm-12">
    <%= form_for(@discipline, :html => { class: "form-horizontal", role: "form" }) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Discipline name" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, class: "form-control", rows: 10, placeholder: "Discipline description" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Add new discipline", class: "btn btn-primary btn-big" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
