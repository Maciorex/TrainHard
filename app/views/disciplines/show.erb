<h1 align="center"><%= @discipline.name %></h1>

<div class="well">
  <div align="center">
    <%= @discipline.description %>
  </div>
</div>
<div class="row">
  <% if current_user.admin? %>
    <%= link_to "Edit discipline", edit_discipline_path(@discipline), class: "btn btn-xs btn-primary" %>
    <%= link_to "Delete discipline", discipline_path(@discipline), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger" %>
  <% end %>
</div>
  
